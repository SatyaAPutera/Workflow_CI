name: sentiment-analysis-ml

conda_env: conda.yaml

entry_points:
  main:
    command: "python modelling.py"
    parameters:
      - name: data_path
        description: "Path to the dataset folder containing train_data.csv and test_data.csv"
        default: "sentiment_analysis_preprocessing"
      - name: experiment_name
        description: "MLflow experiment name"
        default: "svc_tuning_production"

